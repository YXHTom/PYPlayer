<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/x208"
    android:layout_height="@dimen/y296"
    android:layout_marginRight="@dimen/x16"
    android:foreground="@drawable/rect_selector_strong"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/backgroundPanel"
    app:cardElevation="@dimen/y8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y208"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:id="@+id/ll_palette"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x16"
            android:paddingRight="@dimen/x16">

            <com.neuroandroid.pyplayer.widget.NoPaddingTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/colorGray333"
                android:textSize="14sp"
                tools:text="title"/>

            <com.neuroandroid.pyplayer.widget.NoPaddingTextView
                android:id="@+id/tv_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y4"
                android:lines="1"
                android:textColor="@color/colorGray666"
                android:textSize="12sp"
                tools:text="sub_title"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>